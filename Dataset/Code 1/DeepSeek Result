class Solution {
    // Method to find two indices where the sum of their values equals the target
    public int[] twoSum(int[] nums, int target) {
        // Create a HashMap to store numbers and their indices
        Map<Integer, Integer> numToIndexMap = new HashMap<>();
        
        // Get the length of the input array
        int sizeOfArray = nums.length;

        // Loop through each element in the array
        for(int i = 0; i < sizeOfArray; i++) {
            // Calculate the difference needed to reach the target
            int diff = target - nums[i];

            // Check if the difference exists in the HashMap
            if(numToIndexMap.containsKey(diff)) {
                // If found, return the current index and the stored index
                return new int[]{i, numToIndexMap.get(diff)};
            }

            // Store the current number and its index in the HashMap
            numToIndexMap.put(nums[i], i);
        }

        // If no solution found, return null
        return null;
    }
}
